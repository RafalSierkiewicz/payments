{
  "compilerOptions": {
    "baseUrl": "./src/",
    "rootDir": "src",
    "target": "es5",
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "config",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
